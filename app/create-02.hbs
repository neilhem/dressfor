---
title: Create - Sea adventure
---
<section class="page page--create">
  {{> nav-create }}
  <div class="container">
    <section class="pattern" data-index="2">
      <div class="row">
        <div class="col-xs-8">
          <div class="pattern-image" style="background-image: url('../images/raw-01.png');">
            <canvas id="showImage" width="547" height="646" data-image="images/raw-00.png"
              style="-webkit-mask-image: url('../images/raw-01.png');"></canvas>
          </div>
          <div class="pattern-zooming">
            <button class="btn btn--bordered" type="button" title="Zoom In">
              <span class="icon icon--plus"></span>
            </button>
            <button class="btn btn--bordered" type="button" disabled title="Zoom Out">
              <span class="icon icon--minus"></span>
            </button>
          </div>
          <ul class="pattern-links list-inline">
            <li><a href="#">Load to store</a></li>
            <li>/</li>
            <li><a href="#">Share</a></li>
            <li>/</li>
            <li><a href="cart.html">Check my shopping bag</a></li>
          </ul>
        </div>
        <div class="col-xs-4">
          <aside class="pattern-sidebar">
            <h1 class="title"><span class="icon icon--cat-02"></span></h1>

            <div class="pattern-panel">
              <ul class="list-inline">
                <li class="pull-right">#dff0021pn</li>
                <li><h5 class="title">Your Pattern</h5></li>
              </ul>

              <canvas id="pattern" width="265" height="265"></canvas>

              <div class="pattern-color">
                <button class="btn btn-link" type="button">
                  <span class="icon icon--close"></span>
                </button>
                <ul class="list-unstyled"></ul>
              </div>
            </div>

            <div class="pattern-panel">
              <h5 class="title">Choose Elements</h5>
              <div class="js-scrollbar pattern-list">
                <ul class="list-unstyled"></ul>
              </div>

              <ul class="list-unstyled pattern-control">
                <li><button class="btn btn-primary btn-block" type="button">Save</button></li>
                <li><a class="btn btn-primary btn-block" href="cart.html">Order</a></li>
              </ul>
            </div>
          </aside>
        </div>
      </div>
    </section>
  </div>
</section>
